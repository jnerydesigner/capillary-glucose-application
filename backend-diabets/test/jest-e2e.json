{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/src/$1",
    "^@presenters/(.*)$": "<rootDir>/src/presenters/$1",
    "^@application/(.*)$": "<rootDir>/src/application/$1",
    "^@infra/(.*)$": "<rootDir>/src/infra/$1",
    "^@domain/(.*)$": "<rootDir>/src/domain/$1"
  }
}
