pipeline {
    agent any

    stages {
        stage('Navigate to the backend folder') {
            steps {
                script {
                    sh 'cd /var/lib/jenkins/workspace/DiabetsApplication/backend-diabets && ls -la'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('jandernery/blood-sweet-api:${env.BUILD_ID}', '/var/lib/jenkins/workspace/DiabetsApplication/backend-diabets')
                }
            }
        }
    }
}
